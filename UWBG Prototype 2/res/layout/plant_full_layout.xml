<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="5dp"
    >
    
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@color/light_yellow"
    android:layout_gravity="center_horizontal"
    >
    
    <TextView android:id="@+id/plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
    <TextView android:id="@+id/family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
     
    <TextView android:id="@+id/accession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />   

</LinearLayout>

    
<LinearLayout 
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" 
    android:padding="10dp"
    android:background="@color/really_light_green"
    >


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scientific Name:"
            android:textColor="@color/dark_blue"
            />

        <TextView
            android:id="@+id/scientificn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title" />
        </LinearLayout>
         
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Common Name:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/family_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />       
   
        </LinearLayout>  
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genus:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/genus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />       
   
        </LinearLayout> 
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specific Epithet:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/specific_epi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
        </LinearLayout> 
           <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common Name:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/common_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
        </LinearLayout> 
           <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
       </LinearLayout> 
         
       <!--     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphic Range:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/graphicr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
        </LinearLayout>  -->
        
            
           <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map Grid:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/map_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
        </LinearLayout> 
         
           <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
         android:orientation="horizontal">      
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Reported Condition:"
            android:textColor="@color/dark_blue"
            />

          <TextView
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantname" />                  
   
        </LinearLayout>            

</LinearLayout>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
           
    <Button android:id="@+id/plantonMap"
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:padding="5dp"
    android:layout_weight="0.5"
    android:text="Directions to this plant"  
    android:drawableLeft="@drawable/compass"  
      android:background="@drawable/yellow_button"
      android:layout_marginRight="5dp"
    />
     <Button android:id="@+id/addBookmarks"
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:padding="5dp"
    android:layout_weight="0.5"
    android:text="Add to My BookMarks" 
    android:background="@drawable/yellow_button"
    android:drawableLeft="@drawable/singlebookmarkunselected"  
    android:layout_marginLeft="5dp"
    />
    
</LinearLayout>

   
    
    

</LinearLayout>
