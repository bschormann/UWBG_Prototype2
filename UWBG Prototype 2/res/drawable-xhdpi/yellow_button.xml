<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false" >
        <shape>
        <gradient android:startColor="@color/yellow" android:endColor="@color/light_yellow" android:angle="270" />
        <corners android:radius="10dp"/>
        </shape>
        
    </item>
    <item android:state_pressed="true">
        <shape>
        <gradient android:startColor="@color/light_yellow" android:endColor="@color/yellow" android:angle="270" />
        <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>
